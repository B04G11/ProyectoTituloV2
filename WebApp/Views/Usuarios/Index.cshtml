@model List<Usuario>

<h2 class="minimal-title">Usuarios</h2>

<a asp-action="Create" class="btn-add">Crear Nuevo Usuario</a>

<div class="table-wrapper">
    <table class="minimal-table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr class="estado-fila @(usuario.Activo ? "si" : "no")">
                    <td>@usuario.Nombre</td>
                    <td>@usuario.Email</td>
                    <td>@(usuario.Activo ? "Sí" : "No")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@usuario.UsuarioId" class="btn-action">Editar</a>
                        <a asp-action="Delete" asp-route-id="@usuario.UsuarioId" class="btn-action danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
