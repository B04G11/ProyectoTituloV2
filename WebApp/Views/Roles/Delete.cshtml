@model Rol

<div class="centered-wrapper">
    <div class="delete-card">
        <h2 class="minimal-title">Eliminar Rol</h2>
        <p>¿Estás seguro de que deseas eliminar el rol <strong>@Model.Nombre</strong>?</p>

        <form asp-action="DeleteConfirmed" method="post" class="delete-form">
            <input type="hidden" asp-for="RolId" />
            <button type="submit" class="btn-delete">Sí, eliminar</button>
            <a asp-action="Index" class="btn-cancel">Cancelar</a>
        </form>
    </div>
</div>
