@model List<Empresa>

<h2 class="minimal-title">Empresas</h2>

<a asp-action="Create" class="btn-add">Nueva Empresa</a>

<div class="table-wrapper">
    <table class="minimal-table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Razón Social</th>
                <th>Activo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr class="estado-fila @(e.Activo ? "si" : "no")">
                    <td>@e.Nombre</td>
                    <td>@e.RazonSocial</td>
                    <td>@(e.Activo ? "Sí" : "No")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@e.EmpresaId" class="btn-add listas">Editar</a>
                        <a asp-action="Delete" asp-route-id="@e.EmpresaId" class="btn-add listase">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
