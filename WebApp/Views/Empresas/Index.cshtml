@model List<Empresa>

<h2>Empresas</h2>
<a asp-action="Create" class="btn btn-primary">Nueva Empresa</a>

<table class="table">
    <thead>
        <tr><th>Nombre</th><th>Razón Social</th><th>Acciones</th></tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Nombre</td>
                <td>@e.RazonSocial</td>
                <td>@(e.Activo ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@e.EmpresaId" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Delete" asp-route-id="@e.EmpresaId" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
