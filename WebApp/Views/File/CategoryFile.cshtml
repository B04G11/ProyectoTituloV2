@{
    ViewData["Title"] = "Categoría de Archivos";
}

<div class="centered-wrapper">
    <form action="analizar" method="post" enctype="multipart/form-data" class="minimal-form">
        <h2 class="minimal-title">Categoría de Archivos</h2>

        <label>
            Nombre Categoría
            <input type="text" name="category" id="category" placeholder="Ej: Cotizaciones" />
        </label>

        <label>
            Archivo CSV
            <input type="file" name="file" id="file" />
        </label>

        <button type="submit">Crear Categoría</button>
    </form>
</div>


