@model LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <title>Iniciar sesión</title>
    <link rel="stylesheet" href="~/css/login.css" />
    <style>
        .text-danger {
            color: red;
            font-weight: bold;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="split-screen">
        <div class="left">
            <div id="particles-js"></div>

            <div class="left-content">
                <div class="logo-container">
                    <img src="~/img/login-autoreport.png" alt="Logo Autoreport" />
                    <h1>Solucion al alcanze de tu mano</h1>
                </div>
            </div>
        </div>
        <div class="right">
            <div class="form-container">
                <h2>Iniciar sesión</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <form asp-action="Login" method="post">
                    <div class="form-group">
                        <label asp-for="Email">User Name</label>
                        <input asp-for="Email" placeholder="User Name" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" type="password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-buttons">
                        <button type="submit" class="btn btn-login">Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/js/particles.min.js"></script>
    <script>
        particlesJS.load('particles-js', '/particles/particles.json', function () {
            console.log('particles.js loaded');
        });
    </script>
</body>
</html>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    @if (TempData["Mensaje"] != null)
    {
        <text>
                    Swal.fire({
                        icon: '@TempData["TipoMensaje"]',
                        title: '@(TempData["TipoMensaje"]?.ToString() == "success" ? "Éxito" : "Error")',
                        text: '@TempData["Mensaje"]'
                    });
        </text>
    }
</script>
